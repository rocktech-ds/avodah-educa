{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "paths": {
      "@/components": [
        "./src/components"
      ],
      "@/hooks": [
        "./src/hooks"
      ],
      "@/providers": [
        "./src/providers"
      ],
      "@/lib": [
        "./src/lib"
      ],
      "@/types": [
        "./src/types"
      ],
      "@/styles": [
        "./src/styles"
      ],
      "@/*": [
        "./src/*"
      ],
      "@/public": [
        "./public"
      ]
    },
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": false
  },
  "include": [
    "./src/types/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}